{
  "name": "@ldesign/ui",
  "version": "1.0.0",
  "description": "现代化Vue3 UI组件库，提供丰富的组件、主题系统、无障碍支持",
  "type": "module",
  "main": "./dist/ldesign-ui.umd.js",
  "module": "./dist/ldesign-ui.es.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/ldesign-ui.es.js",
      "require": "./dist/ldesign-ui.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/style.css",
    "./package.json": "./package.json"
  },
  "files": [
    "README.md",
    "dist",
    "examples"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "example": "tsx examples/basic-usage.ts",
    "example:dev": "cd examples && pnpm dev",
    "example:build": "cd examples && pnpm build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "clean": "rimraf dist coverage",
    "prepublishOnly": "pnpm typecheck && pnpm test:run && pnpm build"
  },
  "keywords": [
    "ui",
    "components",
    "vue",
    "vue3",
    "typescript",
    "design-system",
    "theme",
    "accessibility",
    "responsive",
    "ldesign"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ui.git"
  },
  "bugs": {
    "url": "https://github.com/ldesign/ui/issues"
  },
  "homepage": "https://github.com/ldesign/ui#readme",
  "peerDependencies": {
    "vue": "^3.3.0",
    "@ldesign/engine": "^1.0.0",
    "@ldesign/color": "^1.0.0"
  },
  "dependencies": {
    "@floating-ui/vue": "^1.0.2",
    "@vueuse/core": "^10.7.0",
    "lucide-vue-next": "^0.294.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^1.1.3",
    "@vitest/ui": "^1.1.3",
    "@vue/test-utils": "^2.4.3",
    "eslint": "^8.56.0",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vitepress": "^1.0.0",
    "vitest": "^1.1.3",
    "vue": "^3.4.3"
  }
}
